<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="deadlinemaster.PreferencesController">
   <children>
      <TabPane focusTraversable="false" layoutX="44.0" layoutY="22.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab text="Salvataggio">
            <content>
              <AnchorPane>
                     <children>
                        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label text="Percorso di salvataggio" textFill="#000000cc" />
                                    <TextField fx:id="txtSaveFilePath" editable="false" focusTraversable="false" promptText="Seleziona una posizione..." HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnSaveFilePath" minWidth="35.0" mnemonicParsing="false" onAction="#openSaveFileChooser" text="..." />
                                    <Button fx:id="btnSaveFilePathReset" minWidth="50.0" mnemonicParsing="false" onAction="#resetSaveFile" text="Reset" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
